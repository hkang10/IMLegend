<!DOCTYPE html>
<html>
<head>
  <title>Imlegend</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if !logged_in? %>
    <%= link_to 'Home', root_path %>
    <%= link_to 'New Legend', new_teacher_path %>
  <% else %>
    <%= link_to 'All Students', students_path %>
    <%= link_to 'All Teams', teams_path %>
    <%= link_to 'My Team', team_path(current_teacher.team) %>
    <% if current_teacher.admin? %>
      <%= link_to 'Admin', teachers_path %>
    <% end %>
    Welcome, <%= current_teacher.full_name %>
    <%= link_to 'Log Out', logout_path, method: :delete %>
  <% end %>

<%= yield %>

</body>
</html>
