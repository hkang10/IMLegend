      <%= link_to student.full_name, student_path(student) %>
      <%= link_to "Edit", edit_student_path(student) %>
      <%= link_to "Delete Student", student_path(student) , method: :delete, data: { confirm: "Are you sure?" } %> <br>
    </li>
  </ul>
<% end %>

<%= link_to "+ Student", new_student_path %>
